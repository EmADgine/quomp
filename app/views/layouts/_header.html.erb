<header class = "navbar navbar-fixed-top navbar-inverse">
<div class = "container-fluid">
    <%= link_to "Quomp", "#", id: "logo" %>
    <nav>
    <ul class="nav navbar-nav pull-right">
        <li class= "divider-vertical"></li>
        <li class="dropdown">
        <a class="dropdown-toggle" href= "#" data-toggle="dropdown">Sign In<strong class="caret"></strong></a>
        <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
            <%= form_tag sessions_path do %>
                <div class ="form-group">
                <%= text_field_tag :email, nil, placeholder:"Email", class: "form-control" %>
            </div>
            <div class= "form-group">
                <%= password_field_tag :password, nil, placeholder:"Password", class: "form-control"%>
            </div>
            <div class = "form-group">
                <%= submit_tag "Sign in", :class => "btn btn-large btn-primary" %>
            </div>
            <% end %>
        </div>
        </li>
    </ul>
    </nav>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script></div>
</header>

