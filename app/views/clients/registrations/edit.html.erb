<div class= 'center' id = "createsheet">
    <h3>Edit Your Registration Information</h3>
    <%=render 'shared/error_messages'%> 
    <form action="/clients" class="new_client" id="new_client" method="put" class = 'center' role ="form">
        <div class="form-group">
            <input type="name" class="form-control" name="client[name]" id="name" placeholder="Name Shown to Providers" required autofocus>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" name= "client[email]" id="email" placeholder="Email" required autofocus>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name= "client[current_password]" placeholder="Current Password" required autofocus>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name= "client[password]" id="passwd" placeholder="New Password" required autofocus>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name= "client[password_confirmation]" id="confirmpasswd" placeholder="Confirm New Password" required autofocus>
        </div>

        <div class="form-group">
            <input name="commit" type="submit" value="Update Registration" class= "btn btn-large btn-primary"/>
        </div>
    </form>
    <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-primary", id: "cancelbutton", :data => { confirm: "Are you sure?" }, method: :delete %>
</div>

