<div class= 'center' id = "createprovider">
    <h3>Create your Provider Profile</h3>
    <form class = 'center' role ="form">
        <div class= "form-group">
            <div class= "btn-group" data-toggle="buttons">
                <label class="btn btn-primary">
                    <input type="radio" name="ptype" id="freelancer">
                    Freelancer
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name= "ptype" id="agency">
                    Agency
                </label>
            </div>
        </div>
        <div class="form-group">
            <input type="name" class="form-control" id="name" placeholder="Name Shown to Clients" required autofocus>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="email" placeholder="Email" required autofocus>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="passwd" placeholder="Password" required autofocus>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="confirmpasswd" placeholder="Confirm Password" required autofocus>
        </div>
    </form>
        <%= link_to "Submit", "#", 
            class: 'btn btn-large btn-primary'%>
</div>
