<div class= 'center' id = "createsheet">
    <legend>Create Client Profile</legend>
    
    <%=render 'shared/error_messages'%> 
    <form action="/clients" class="new_client flp" id="new_client" method="post" class = 'center' role ="form">
        <div class="form-group">
            <input type="name" class="form-control" name="client[name]" id="name" required autofocus>
            <label for="name">Name</label>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" name= "client[email]" id="email" required>
            <label for="email">Email</label>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name= "client[password]" id="passwd" required>
            <label for="passwd">Password</label>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name= "client[password_confirmation]" id="confirmpasswd" required>
            <label for="confirmpasswd">Confirm Password</label>
        </div>
        <div class="form-group">
                <input name="commit" type="submit" value="Populate Profile" class= "btn btn-large btn-primary"/>
        </div>
    </form>
</div>
