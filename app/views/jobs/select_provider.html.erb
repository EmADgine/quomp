<div id="createsheet4" class="center">
    <div class="form-group">
        <legend style="padding-bottom:10px; padding-top:10px;">
            <span>Select a Provider</span>
            <button class="btn btn-primary" id="reorder" style="margin-right:-662px!important; margin-left:462px!important;" data-toggle="tooltip" data-placement="right" title="We've randomized the four best providers below. Click here to reorder the providers in order from highest calculated ranking to lowest">Order by Quomp Ranking</button>
        </legend>
    </div>
    <%@providerlist[0].each_with_index do |provider, i|%>
        <div class="pane" id="<%='p'+@providerlist[1][i].to_s%>">
            <p class="rankdisplay" style="left:10px; bottom: 0px;">Ranking is  <%=@providerlist[1][i].to_s%></p>
            <%= image_tag provider.avatar.url(:small), class: "show-prof img-circle",width: 200, height: 200%>
            <%[provider.name,provider.city.titleize+", "+provider.state,provider.ptype.titleize].each do |text|%>
                <p align="left"><%=text%>
            <%end%>
            <br/>
            <div style="height:150px;overflow:hidden;">
                <p align="left"><%='"'+clamp(provider.description.strip)+'"'%></p>
            </div>
            <hr/>
            <table>
            </table>
            <table cellspacing="5" cellpadding="5">
                <tr>
                    <td valign="top"><b>Projects Completed:</b></td>
                    <td></td>
                    <td><%=(0..45).to_a.sample%></td>
                </tr>

                <%["Timeliness","Responsiveness","Knowledge","Quality of Work","Professionalism","Likeability"].each do |attribute|%>
                    <tr><td valign="top" align="right"><b><%=attribute+":"%></b></td><td></td><td><div class="ratingwrap"><div style="width:<%=16*(6..10).to_a.sample%>px;" class="rating"></div></div></td></tr>
                <%end%>
            </table>
            <br/>
            <div style="margin: auto" align="center">
                <span class="btn btn-primary" data-toggle="modal" data-target="#whymodal<%=i%>">View Full Profile</span>
                <%= link_to 'Award Job', '#', :onclick => "window.location='#{save_provider_client_job_path(:prov_id=> provider.id)}'", :class=> 'btn btn-primary'%>
            </div>
            <%= render partial: 'jobs/why',locals: {provider: provider, job: @job, num: i}%>
        </div>
    <%end%>
    <div class="form-group" style="margin-top:850px!important;">
        <span class="btn btn-primary" data-toggle="modal" data-target="#statistics">Advanced Analysis</span>
    </div>
</div>
<script>
    $("#reorder").tooltip({});
</script>
